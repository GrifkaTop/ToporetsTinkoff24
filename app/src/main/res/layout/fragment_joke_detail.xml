<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/jokeQuestionTextView"
        android:textSize="20sp" android:layout_height="16dp"
        android:layout_width="16dp"/>

    <TextView
        android:id="@+id/jokeAnswerTextView"
        android:textSize="18sp"
        android:layout_marginTop="8dp" android:layout_height="16dp"
        android:layout_width="16dp"/>

    <Button
        android:id="@+id/backButton"
        android:text="Назад"
        android:layout_marginTop="16dp" android:layout_height="16dp"
        android:layout_width="16dp"/>
</LinearLayout>